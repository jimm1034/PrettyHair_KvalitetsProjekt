<Page x:Class="PrettyHair_KvalitetsProjekt.Content.NewCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PrettyHair_KvalitetsProjekt.Content"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewCustomer">

    <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Fornavn" FontSize="20" FontWeight="ExtraBold"
                   Grid.Column="0" Grid.Row="0" TextAlignment="Center"/>
        <TextBlock Text="Efternavn" FontSize="20" FontWeight="ExtraBold"
                   Grid.Column="1" Grid.Row="0" TextAlignment="Center"/>
        <TextBlock Text="Adresse" FontSize="20" FontWeight="ExtraBold"
                   Grid.Column="2" Grid.Row="0" TextAlignment="Center"/>
        <TextBlock Text="Postnr" FontSize="20" FontWeight="ExtraBold"
                   Grid.Column="3" Grid.Row="0" TextAlignment="Center"/>
        <TextBox FontSize="20" FontWeight="ExtraBold" Name="fName"
                   Grid.Column="0" Grid.Row="1" TextAlignment="Center"/>
        <TextBox FontSize="20" FontWeight="ExtraBold" Name="lName"
                   Grid.Column="1" Grid.Row="1" TextAlignment="Center"/>
        <TextBox FontSize="20" FontWeight="ExtraBold" Name="adress" 
                 Grid.Column="2" Grid.Row="1" TextAlignment="Center"/>
        <TextBox FontSize="20" FontWeight="ExtraBold" Name="zipCode" 
                 Grid.Column="3" Grid.Row="1" TextAlignment="Center"/>
        <Button Name="SaveNewCustomer" Click="SaveNewCustomer_Click" Content="Gem kunde" 
                Grid.Column="3" Grid.Row="2"/>
    </Grid>
</Page>
